<% include ../partials/header.ejs %>

<div class="container">
    <div class="tile is-ancestor">
        <div class="tile is-vertical is-12">
            <div class="tile">

                <% var firsInsta = [instagramData[0], instagramData[1]] %>
                <div class="tile is-parent is-vertical">
                    <% firsInsta.forEach(function(insta){ %>
                        <article class="tile is-child notification">
                            <p class="subtitle"><%= insta.caption.text %></p>
                            <figure class="image is-4by3">
                                <img src="<%= insta.images.standard_resolution.url %>" />
                            </figure>
                        </article>
                    <% }) %>
                </div>

                <% var secondInsta = [instagramData[2], instagramData[3]] %>
                <div class="tile is-parent">
                    <article class="tile is-child notification">
                    <% secondInsta.forEach(function(insta){ %>                        
                        <p class="subtitle"><%= insta.caption.text %></p>
                        <figure class="image is-4by3">
                            <img src="<%= insta.images.standard_resolution.url %>">
                        </figure>
                    <% }) %>
                    </article>
                </div>

                <% var thirdInsta = [instagramData[4], instagramData[5]] %>
                <div class="tile is-parent is-vertical">                    
                    <article class="tile is-child notification is-info">
                        <p class="title">Middle tile</p>
                        <p class="subtitle">With an image</p>
                        <figure class="image is-2by1">
                            <img src="https://bulma.io/images/placeholders/640x480.png">
                        </figure>
                    </article>   
                    <article class="tile is-child notification is-info">
                        <p class="title">Middle tile</p>
                        <p class="subtitle">With an image</p>
                        <figure class="image is-2by1">
                            <img src="https://bulma.io/images/placeholders/640x480.png">
                        </figure>
                    </article>                                       
                </div>

            </div>
        </div>
    </div>
</div>

<% include ../partials/footer.ejs %>